/*! http://responsiveslides.com v1.54 by @viljamis */

.rslides {
  position: relative;
  list-style: none;
  overflow: hidden;
  width: 100%;
  padding: 0;
  margin: 0;
  }

.rslides li {
  -webkit-backface-visibility: hidden;
  position: absolute;
  display: none;
  width: 100%;
  left: 0;
  top: 0;
  }

.rslides li:first-child {
  position: relative;
  display: block;
  float: left;
  }

.rslides img {
  display: block;
  height: auto;
  float: left;
  width: 100%;
  border: 0;
  }


  .btn-direction {
    background:url(img/sprite.png);
    width:32px;
    height:32px;
    display: block;
    text-indent: -9999px;
    overflow: hidden;
  }

  .btn-direction.up { background-position: -127px 0;  }
  .btn-direction.down { background-position: -159px 0;  }

  .btn-direction.left { background-position: 0 0;  }
  .btn-direction.right { background-position: -32px 0;  }



  .btn-direction.up:hover { background-position: -127px 0;  }
  .btn-direction.down:hover { background-position: -159px 0;  }
  .btn-direction.left:hover { background-position: -96px 0;  }
  .btn-direction.right:hover { background-position: -64px 0;  }

  .btn-direction.medium {
    width:45px;
    height:44px;
  }
  
  .bx-prev, .bx-next {
    background:url(img/sprite.png);
    width:32px;
    height:32px;
    display: block;
    text-indent: -9999px;
    overflow: hidden;
  }

  .bx-prev { background-position: 0 0;  }
  .bx-next { background-position: -32px 0;  }
  .bx-prev:hover { background-position: -64px 0;  }
  .bx-next:hover { background-position: -96px 0;  }


  .rslides_nav {
    background:url(img/sprite.png);
    width:32px;
    height:30px;
  }

  .rslides_nav.prev {
    background-position:0 0;
  }
  
  .rslides_nav.next {
    background-position:-32px 0;
  }

